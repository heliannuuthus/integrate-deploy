{% macro init(workdir) -%}
runs-on: ubuntu-latest
defaults:
  run:
    working-directory: ${{ workdir }}
steps:
  - uses: actions/checkout@v4
{% endmacro %}

{% macro upload(name, paths=[]) -%}
- name: upload {{ name }}
  uses: actions/upload-artifact@v4
  with:
    name: {{ name }}
    path: |
      {% for path in paths %}
        {{ path }}
      {% endfor %}
{% endmacro %}

{% macro download(name, paths=[]) -%}
- name: download {{ name }}
  uses: actions/download-artifact@v4
  with:
    name: {{ name }}
    path: |
      {% for path in paths %}
        {{ path }}
      {% endfor %}
{% endmacro %}


