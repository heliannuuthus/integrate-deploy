{
  "workdir": "{{ inputs.workdir }}",
  "rust_workdir": "{{ inputs.workdir }}/src-tauri",
  "variables": {
    "inputs": [
      {
        "name": "workdir",
        "default": "./",
        "desc": "Specify all of node steps where are run",
        "type": "string",
        "required": "false"
      },
      {
        "name": "node",
        "required": "false",
        "default": "lts/*",
        "type": "string",
        "desc": "Specify node version, default: lts"
      },
      {
        "name": "toolchain",
        "required": "false",
        "default": "stable",
        "type": "string",
        "desc": "Specify rust toolchain version, default: stable"
      },
      {
        "name": "build",
        "required": "false",
        "default": "build",
        "type": "string",
        "desc": "Specify build command"
      },
      {
        "name": "test",
        "required": "false",
        "type": "string",
        "desc": "Specify test command"
      }
    ],
    "secrets": [],
    "outputs": []
  },
  "setup": {
    "apt": {
      "packages": [
        "libwebkit2gtk-4.0-dev",
        "libappindicator3-dev",
        "librsvg2-dev",
        "patchelf"
      ],
      "version": "rust-tauri-ci"
    }
  },
  "build": {
    "upload": {
      "name": "target",
      "paths": [
        "${{ inputs.workdir }}/src-tauri/target/release/${{ steps.environments.outputs.project }}",
        "${{ inputs.workdir }}/src-tauri/target/default/report.xml",
        "${{ inputs.workdir }}/src-tauri/target/cobertura.xml"
      ]
    }
  }
}
