{
  "workdir": "{{ inputs.node_workdir }}",
  "variables": {
    "inputs": [
      {
        "name": "rust_workdir",
        "default": "./src-tauri",
        "desc": "Specify all of rust steps where are run",
        "type": "string",
        "required": "false"
      },
      {
        "name": "node_workdir",
        "default": "./",
        "desc": "Specify all of node steps where are run",
        "type": "string",
        "required": "false"
      },
      {
        "name": "node",
        "required": "false",
        "default": "lts/*",
        "type": "string",
        "desc": "Specify node version, default: lts"
      },
      {
        "name": "build",
        "required": "false",
        "default": "build",
        "type": "string",
        "desc": "Specify build command"
      },
      {
        "name": "test",
        "required": "false",
        "type": "string",
        "desc": "Specify test command"
      }
    ],
    "secrets": [
    ],
    "outputs": []
  },
  "setup": {
    "apt": {
      "packages": [
        "libwebkit2gtk-4.0-dev",
        "libappindicator3-dev",
        "librsvg2-dev",
        "patchelf"
      ],
      "version": "rust-tauri-ci"
    }
  },
  "build_tauri": {
    "upload": {
      "name": "tauri-artifact",
      "paths": [
        "${{ fromJSON(steps.tauri-action.outputs.artifactPaths)[0] }}",
        "${{ fromJSON(steps.tauri-action.outputs.artifactPaths)[1] }}",
        "${{ fromJSON(steps.tauri-action.outputs.artifactPaths)[2] }}"
      ]
    }
  }
}
