{
  "workdir": "{{ inputs.gradle_workdir }}",
  "variables": {
    "inputs": [
      {
        "name": "gradle_workdir",
        "default": "./",
        "desc": "Specify all of gradle-steps where are run",
        "type": "string",
        "required": "false"
      },
      {
        "name": "user",
        "required": "true",
        "type": "string",
        "desc": "publisher"
      },
      {
        "name": "PUBLISH_REPOSITORY_NAME",
        "required": "true",
        "type": "string",
        "desc": "publish destination repository name"
      },
      {
        "name": "PUBLISH_REPOSITORY_URL",
        "required": "true",
        "type": "string",
        "desc": "publish destination repository url"
      }
    ],
    "secrets": [
      {
        "name": "token",
        "required": "true",
        "desc": "publish token"
      }
    ],
    "outputs": []
  },
  "lint": {},
  "security": {},
  "build": {
    "upload": {
      "name": "target",
      "paths": [
        "${{ inputs.gradle_workdir }}build/"
      ]
    }
  },
  "containerize": {
    "download": {
      "name": "target",
      "paths": [
        "${{ inputs.gradle_workdir }}build/"
      ]
    }
  }
}
