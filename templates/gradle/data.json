{
  "variables": {
    "inputs": [
      {
        "name": "workdir",
        "default": "./",
        "desc": "Specify all of gradle steps where are run",
        "type": "string",
        "required": "false"
      }
    ],
    "secrets": [],
    "outputs": [
      {
        "name": "version",
        "desc": "major version",
        "value": "jobs.build.outputs.version"
      }
    ]
  },
  "lint": {},
  "security": {},
  "build": {
    "upload": {
      "name": "target",
      "paths": ["${{ inputs.workdir }}build/"]
    }
  },
  "containerize": {
    "download": {
      "name": "target",
      "paths": ["${{ inputs.workdir }}build/"]
    }
  }
}
